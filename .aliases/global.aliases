# Print tab separated values on new line even with missing columns
function trt () {
    tr "\t" "\n" | nl -b a
}

# Get content from a specified line number from a long file
function getline () {
    head -n $1 $2 | tail -n 1
}

# Get output of previous command from stdout
# Usage echo $lines
function redirect () {
  ol=("${(f@)$(cat)}")
}

